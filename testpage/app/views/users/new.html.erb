<h1>Create an Account</h1>

<%= form_for :user, url: '/users' do |f| %>
 <table>
  <tr>
    <td>Username:</td> <td><%= f.text_field :username %></td>
  </tr>
  <tr>
    <td>Password:</td> <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td>Password Confirmation:</td> <td><%= f.password_field :password_confirmation %></td>
  </tr>
  <tr>
    <td></td>
    <td><%= f.submit "Create Account" %></td>
  </tr>
 </table>

<% end %>
